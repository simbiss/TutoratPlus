<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_2"/>

    <TextView
        android:id="@+id/nom_item"
        android:text="Nom cours / Nom tuteur"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_item"
        android:layout_toEndOf="@+id/img_item"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/description_item"
        android:text="description "
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_item"
        android:layout_alignLeft="@+id/nom_item"
        android:layout_alignStart="@+id/nom_item" />



</RelativeLayout>