<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginBottom="60px"
        android:background="#9F9F9F"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="20px"
        android:text="TutoratPlus"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:src="@drawable/logo_information" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur notre site de tutorat, votre chemin vers l'excellence. Nos tuteurs qualifiés vous guideront vers la réussite dans toutes les matières. Personnalisation, flexibilité, ressources, et satisfaction garantie sont nos engagements. Rejoignez-nous aujourd'hui pour une éducation sur mesure et un avenir brillant." />

    <Button
        android:id="@+id/main_btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="100px"
        android:fontFamily="sans-serif-medium"
        android:text="Retour"
        app:cornerRadius="70px" />

</LinearLayout>